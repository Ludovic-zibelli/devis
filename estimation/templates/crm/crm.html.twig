{% extends "base.html.twig" %}
{% block body %}
    {{ parent() }}
    {% for message in app.flashes('success') %}
    <div class="flash-success">
        {{ message }}
    </div>
    {% endfor %}
    <a href="{{ url("crm_creation") }}"><button class="btn-dark btn">Cr√©er une estimation</button></a><br>
    {% for client in data|sort((a, b) => a.date <=> b.date)|reverse %}
        {{ client.date|date("d/m/Y") }} {{ client.nom }} {{ client.prenom }} <a href="{{ url("crm_info", {slug: client.clientId}) }}"><button class="btn-info btn">Vers l'estimation</button></a><br>
    {% endfor %}
{% endblock %}