{% extends "base.html.twig" %}
{% block body %}
    {{ parent() }}
    {% for message in app.flashes('success') %}
        <div class="flash-success">
            {{ message }}
        </div>
    {% endfor %}
    <a href="{{ url("crm") }}"><button class="btn-link btn">Retour à la liste</button></a><br>
    <h2>Estimation</h2>
    <p>Date de demande : {{ estimation.date|date("d/m/Y") }}</p>
    <p>Nom société : {{ estimation.raisonSocial }}</p>
    <p>Type de client : {{ estimation.client }}</p>
    <p>Nom : {{ estimation.nom }}</p>
    <p>Prénom : {{ estimation.prenom }}</p>
    <p>E-mail : {{ estimation.email }}</p>
    <p>N° Tél : 0{{ estimation.telephone }}</p>
    <p>Estimation à partir de {{ total }}€</p>
    <a href="{{ url("crm_modif", {slug: estimation.clientId}) }}"><button class="btn-primary btn">Modifier les informations</button></a>
    <a href="{{ url("crm_renvoi", {slug: estimation.clientId}) }}"><button class="btn-secondary btn">Renvoyer l'estimation</button></a>
    <a href="{{ url("crm_suppr", {slug: estimation.clientId}) }}"><button onclick="return confirm('Voulez-vous vraiment supprimer cette estimation?')" class="btn-danger btn">Supprimer l'estimation</button></a>
    <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
    <script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript"></script>
    <a href="" onclick="Calendly.initPopupWidget({url:'https://calendly.com/jkenobi/rdv-telephonique?hide_event_type_details=1'});return false;"><button class="btn-success btn">Prendre RDV avec un client</button></a>
    <ul>
        <li>{{ estimation.contexte }} de site {{ estimation.type }}</li>
        <li>Elements graphiques fourni : {{ estimation.elementsGraphiques}}</li>
        <li>Niveau graphique : {{ estimation.niveauGraphisme }}</li>
        {% if estimation.logo != false %}
            <li>Création du logo</li>
        {% endif %}
        <li>Charte graphique :
            {% if estimation.charteGraphique  != false %}
                oui
            {% else %}
                non
            {% endif %}</li>
        <li>Nombre de page : {{ estimation.nombrePage }}</li>
        {% set l = estimation.langue|length %}
        {% if l != 0 %}
            {% for i in 1..l %}
                {% set cycle = cycle(estimation.langue, i) %}
                <li>Langues du site : {{ cycle|replace({'fr': 'Français', 'de': 'Allemand', 'en': 'Anglais', 'ar': 'Arabe', 'es': 'Espagnol', 'it': 'Italien', 'zh': 'Mandarin', 'pt': 'Portugais'}) }}</li>
            {% endfor %}
        {% endif %}
        <li>Ajout d'une page actualites :
            {% if estimation.actualites  != false %}
                oui
            {% else %}
                non
            {% endif %}</li>
        <li>Ajout d'un blog :
            {% if estimation.blog  != false %}
                oui
            {% else %}
                non
            {% endif %}</li>
        <li>Ajout emailing :
            {% if estimation.emailing  != false %}
                oui
            {% else %}
                non
            {% endif %}</li>
        <li>Nombre de formulaire : {{ estimation.formulaire }}</li>
        <li>Ajout d'un espace membre :
            {% if estimation.espaceMembre  != false %}
                oui
            {% else %}
                non
            {% endif %}</li>
        <li>Ajout d'un forum :
            {% if estimation.forum  != false %}
                oui
            {% else %}
                non
            {% endif %}</li>
        <li>Ajout de google maps :
            {% if estimation.gMaps  != false %}
                oui
            {% else %}
                non
            {% endif %}</li>
        <li>Nombre d'image : {{ estimation.image }}</li>
        <li>Nombre de video : {{ estimation.video }}</li>
        {% set hv = estimation.hebergeurVideo|length %}
        {% if hv != 0 %}
            <li>Il héberge ses videos chez</li>
            {% for i in 1..hv %}
                <li>{{ cycle(estimation.hebergeurVideo, i) }}</li>
            {% endfor %}
        {% endif %}
        <li>création d'un nom de domaine :
            {% if estimation.domaine  != false %}
                oui
            {% else %}
                non
            {% endif %}</li>
        <li>Abonnement gestion :
            {% if estimation.gestion  != false %}
                oui
            {% else %}
                non
            {% endif %}</li>
        <li>Abonnement suivi des stats :
            {% if estimation.suiviStats  != false %}
                oui
            {% else %}
                non
            {% endif %}</li>
        <li>Abonnement assistance technique :
        {% if estimation.assistance  != false %}
            oui
        {% else %}
            non
        {% endif %}</li>
        {% set md = estimation.marketingDigital|length %}
        {% if md != 0 %}
            <li>Il voudrait
            {% for i in 1..md %}
                {% set cycle = cycle(estimation.marketingDigital, i) %}
                {{ cycle|replace({'res_soc': 'un accompagnement réseaux sociaux', 'ref_nat': 'un référencement naturel', 'redac': 'un accompagnement rédaction web', 'campagne': 'une campagnes de marketing en ligne'}) }}</li>
            {% endfor %}
        {% endif %}
    </ul>
{% endblock %}